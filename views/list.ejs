<%- include('header'); -%>
	<div class="box" id="heading">
		<h1><%=day%> </h1>
	</div>
	
	<div class="box">
		<% items.forEach(function(item){%>
			<div class="item">
				<input type="checkbox">
				<p><%=item%></p>
			</div>
				
		<% });%>
		
		<form class="form" action="/" method="post">
			<input type="text" name="newitem" placeholder="New item" required>
			<button type="submit" class="button" name="button" value="<%=day%>">+</button>
		</form>

	</div>
	
<%- include('footer'); -%>